<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="150dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingPrefix"  android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageSong"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nameSongTV"
            android:layout_width="213dp"
            android:layout_height="27dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/advent_pro_medium"
            android:textColor="#FDFDFD"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imageSong"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/artistSongTV"
            android:layout_width="213dp"
            android:layout_height="27dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/advent_pro_medium"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imageSong"
            app:layout_constraintTop_toBottomOf="@+id/nameSongTV" />

        <TextView
            android:id="@+id/releaseSongTV"
            android:layout_width="213dp"
            android:layout_height="27dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/advent_pro_medium"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imageSong"
            app:layout_constraintTop_toBottomOf="@+id/artistSongTV" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageSong" />
</androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>